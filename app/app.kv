MDScreen:
    radius: [25, 25, 25, 25]
    md_bg_color: self.theme_cls.primaryColor

    MDTextField:
        id: url_field
        mode: "filled"
        size_hint_x: None
        width: "340dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        on_text: app.url_text = self.text

        MDTextFieldHintText:
            text: "Ingresa el link"

    MDButton:
        style: "elevated"
        size_hint_x: None
        width: "240dp"
        pos_hint: {"center_x": .5, "center_y": .10}
        on_press: app.download_yt()

        MDButtonText:
            text: "Descargar"
