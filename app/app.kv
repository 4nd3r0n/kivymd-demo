MDScreen:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Download'
            icon: 'download'

            MDTextField:
                id: text_field
                hint_text: "Paste Video Link"
                helper_text: "Only Link"
                pos_hint: {"center_x": .5, "center_y": .6}
                size_hint_x: .5

            MDRaisedButton:
                text: "Download"
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Files'
            icon: 'folder'

            MDFloatLayout:
                MDRoundFlatIconButton:
                    text: "Open manager"
                    icon: "folder"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: app.file_manager_open()

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Settings'
            icon: 'android'

            MDLabel:
                text: "Coming Soon..."
                halign: "center"
